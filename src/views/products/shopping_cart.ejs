                        <h6 class="items__title">$ 7000</h6>
                    </article>
                </div>
        
                        <!--<div class="space-add-button">
                            <button><i class="far fa-heart"></i>Agregar a Favoritos </button>
                            <button><i class="far fa-times-circle"></i>Eliminar Producto</button>
                        </div>-->
            </section>    
            <h3>Total Carrito</h3>
            <section class="content_section">
                <div class="items-nav">
                    <div class="items-nav__price"><h6 class="items_price">Subtotal:</h6><p class="items_price">$$$$$</p></div>   
                    <div class="items-nav__price"><h6 class="items_price">Envio:</h6><p class="items_price">$$$$$</p>   </div>                        
                    <div class="items-nav__price"><h6 class="items_price">Total:</h6><p class="items_price">$$$$$</p>   </div>
                </div>
                <nav class="items-nav content-buttoms">
                    <div class="buttoms_cart"><a href="/register"><button>Pagar</button></a>
                        <a href="/"><button>Continuar Comprando</button></a></div>
                </nav>
            </section>
        </section>
          
    </main>

    <!--footer-->
    <%- include("../partials/footer") %>
