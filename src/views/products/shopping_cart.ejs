    <main class="main-main">
        
        <section class="main-content">
            <h3>Carrito de Compras</h3>

            <section class="content_section">

                <div class="products">
                    <article class="items">
                        <h6 class="items__title">IMAGEN</h6>
                        <h6 class="items__title">NOMBRE</h6>
                        <h6 class="items__title">PRECIO</h6>
                        <h6 class="items__title">CANTIDAD</h6>                        
                        <h6 class="items__title">TOTAL</h6>
                    </article>
                </div>

                <div class="products">
                    <article class="items">
                        <img class="items__title" src="/img/mora.jpg" alt="">
                        <h6 class="items__title">MORA</h6>
                        <h6 class="items__title">$ 567</h6>
                        <h6 class="items__title">CANTIDAD</h6>                        
                        <h6 class="items__title">$ 567</h6>
                    </article>
                </div>

                <div class="products">
                    <article class="items">
                        <img class="items__title"src="/img/granadilla.jpg" alt="">
